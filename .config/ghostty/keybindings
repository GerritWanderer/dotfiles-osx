# Reset all keybindings
keybind = clear

# basic commands
keybind = super+n=new_window
keybind = super+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+shift+v=paste_from_selection
keybind = super+a=select_all
keybind = super+k=clear_screen
keybind = super+shift+comma=reload_config

# Selection and Movement
keybind = shift+left=adjust_selection:left
keybind = shift+down=adjust_selection:down
keybind = shift+up=adjust_selection:up
keybind = shift+right=adjust_selection:right
keybind = alt+left=esc:b
keybind = alt+right=esc:f
keybind = super+left=text:\x01
keybind = super+right=text:\x05
keybind = super+backspace=text:\x15
keybind = super+down=jump_to_prompt:1

# Font
keybind = super+minus=decrease_font_size:1
keybind = super+plus=increase_font_size:1
keybind = super+equal=increase_font_size:1

# Window Management
keybind = super+w=close_surface
keybind = super+shift+w=close_window
keybind = super+q=quit

# window pane navigation and resizing with hjkl
keybind = performable:ctrl+h=goto_split:left
keybind = performable:ctrl+j=goto_split:down
keybind = performable:ctrl+k=goto_split:up
keybind = performable:ctrl+l=goto_split:right

keybind = super+right_bracket=goto_split:next
keybind = super+left_bracket=goto_split:previous

keybind = ctrl+shift+j=resize_split:down,50
keybind = ctrl+shift+h=resize_split:left,50
keybind = ctrl+shift+k=resize_split:up,50
keybind = ctrl+shift+l=resize_split:right,50

# Enter associated keybindings for Screen / Split management
keybind = alt+enter=toggle_fullscreen
keybind = ctrl+enter=new_split:right
keybind = ctrl+shift+enter=new_split:down
keybind = super+enter=toggle_split_zoom
keybind = shift+enter=text:\r

keybind = "super+f=write_scrollback_file:open"
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard
